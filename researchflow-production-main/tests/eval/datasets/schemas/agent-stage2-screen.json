{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "agent-stage2-screen-response",
  "title": "agent-stage2-screen response",
  "description": "Screening results with inclusion/exclusion verdicts per paper.",
  "allOf": [{ "$ref": "_base_envelope.json" }],
  "properties": {
    "outputs": {
      "type": "object",
      "properties": {
        "included": {
          "type": "array",
          "items": { "$ref": "#/definitions/PaperScreeningResult" }
        },
        "excluded": {
          "type": "array",
          "items": { "$ref": "#/definitions/PaperScreeningResult" }
        },
        "duplicates": {
          "type": "array",
          "items": { "$ref": "#/definitions/PaperScreeningResult" }
        },
        "total_processed": { "type": "integer", "minimum": 0 },
        "stats": { "type": "object" }
      }
    }
  },
  "definitions": {
    "PaperScreeningResult": {
      "type": "object",
      "required": ["paper_id", "title", "verdict", "reason"],
      "properties": {
        "paper_id": { "type": "string" },
        "title": { "type": "string" },
        "verdict": { "type": "string", "enum": ["included", "excluded", "duplicate"] },
        "reason": { "type": "string" },
        "study_type": {
          "type": ["string", "null"],
          "enum": [
            "randomized_controlled_trial", "systematic_review", "meta_analysis",
            "cohort_study", "case_control_study", "cross_sectional_study",
            "case_report", "observational_study", "review", "clinical_trial",
            "unknown", null
          ]
        },
        "confidence": { "type": "number", "minimum": 0.0, "maximum": 1.0 },
        "matched_criteria": { "type": "array", "items": { "type": "string" } },
        "duplicate_of": { "type": ["string", "null"] },
        "metadata": { "type": "object" }
      }
    }
  }
}
