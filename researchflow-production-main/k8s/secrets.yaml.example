# ============================================
# ResearchFlow - Secrets Configuration Template
# ============================================
# SECURITY: Copy this to secrets.yaml and fill in real values.
# NEVER commit secrets.yaml to version control!
# Consider using sealed-secrets or external secret stores for production.
# ============================================

---
apiVersion: v1
kind: Secret
metadata:
  name: researchflow-secrets
  namespace: researchflow  # IMPORTANT: Must be in researchflow namespace
  labels:
    app.kubernetes.io/name: researchflow
type: Opaque
stringData:
  # Database connection string
  DATABASE_URL: "postgresql://USER:PASSWORD@postgres.researchflow.svc.cluster.local:5432/researchflow"

  # Redis connection string
  REDIS_URL: "redis://:PASSWORD@redis.researchflow.svc.cluster.local:6379"

  # API keys (replace with real keys or leave empty if not used)
  ANTHROPIC_API_KEY: ""
  OPENAI_API_KEY: ""

  # JWT RS256 keys (PEM format). Generate with: openssl genrsa 2048 (private) then extract public
  JWT_PRIVATE_KEY: |
    -----BEGIN RSA PRIVATE KEY-----
    PLACEHOLDER_REPLACE_WITH_REAL_PRIVATE_KEY_PEM
    -----END RSA PRIVATE KEY-----
  JWT_PUBLIC_KEY: |
    -----BEGIN PUBLIC KEY-----
    PLACEHOLDER_REPLACE_WITH_REAL_PUBLIC_KEY_PEM
    -----END PUBLIC KEY-----

  # Optional: for collab/legacy services that use symmetric JWT
  JWT_SECRET: "CHANGE_ME_GENERATE_SECURE_64_CHAR_SECRET"
