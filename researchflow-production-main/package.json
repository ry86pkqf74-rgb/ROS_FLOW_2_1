{
  "name": "researchflow-production",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@9.15.0",
  "description": "Docker-first deployment architecture for ResearchFlow",
  "workspaces": [
    "packages/*",
    "services/orchestrator",
    "services/web"
  ],
  "scripts": {
    "dev": "docker-compose up",
    "dev:build": "docker-compose up --build",
    "build": "pnpm run build:packages && pnpm run build:services",
    "build:packages": "pnpm run build -w packages/core -w packages/phi-engine -w packages/ai-router -w packages/manuscript-engine",
    "build:services": "pnpm run build -w services/orchestrator -w services/web",
    "test": "pnpm run test:unit && pnpm run test:integration",
    "test:unit": "vitest run",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:e2e": "playwright test",
    "test:e2e:docker": "PLAYWRIGHT_BASE_URL=http://localhost:5173 API_URL=http://localhost:3001 playwright test tests/e2e/docker-deployment-live.spec.ts",
    "test:a11y": "playwright test tests/e2e/accessibility --project=accessibility",
    "test:visual": "playwright test tests/visual/baseline.spec.ts",
    "test:visual:update": "playwright test tests/visual/baseline.spec.ts --update-snapshots",
    "test:load": "bash tests/load/k6-runner.sh full",
    "test:load:auth": "bash tests/load/k6-runner.sh auth",
    "test:load:projects": "bash tests/load/k6-runner.sh projects",
    "test:load:governance": "bash tests/load/k6-runner.sh governance",
    "test:load:workflow": "bash tests/load/k6-runner.sh workflow",
    "test:load:normal": "k6 run tests/perf/k6/scenarios/workflow-load.js --config tests/perf/k6/config/normal-load.json",
    "test:load:peak": "k6 run tests/perf/k6/scenarios/workflow-load.js --config tests/perf/k6/config/peak-load.json",
    "test:load:stress": "k6 run tests/perf/k6/scenarios/workflow-load.js --config tests/perf/k6/config/stress-test.json",
    "test:load:ai": "k6 run tests/perf/k6/scenarios/ai-endpoint-load.js --config tests/perf/k6/config/ai-focused.json",
    "test:load:spike": "k6 run tests/perf/k6/scenarios/spike-test.js",
    "test:coverage": "vitest run --coverage",
    "test:rbac": "vitest run tests/governance/rbac.test.ts",
    "test:phi": "vitest run tests/governance/phi-scanner.test.ts",
    "test:fail-closed": "vitest run tests/governance/fail-closed.test.ts",
    "test:mode-enforcement": "vitest run tests/governance/mode-enforcement.test.ts",
    "test:invariants": "vitest run tests/governance/app-mode-invariants.test.ts",
    "type-check": "pnpm run typecheck",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,md}\"",
    "typecheck": "tsc --noEmit",
    "db:push": "drizzle-kit push",
    "db:migrate": "drizzle-kit migrate",
    "db:seed": "tsx scripts/seed.ts",
    "clean": "rm -rf node_modules packages/*/node_modules services/*/node_modules",
    "start:prod": "NODE_ENV=production node services/orchestrator/index.ts",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:rebuild": "docker compose build --no-cache && docker compose up -d",
    "docker:logs": "docker compose logs -f"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.74.0",
    "@notionhq/client": "^5.9.0",
    "concurrently": "^9.2.1",
    "date-fns": "^4.1.0",
    "openai": "^6.18.0",
    "pg": "^8.18.0",
    "serve": "^14.2.5"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.1",
    "@playwright/test": "^1.58.2",
    "@types/node": "^25.2.2",
    "@types/pg": "^8.16.0",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@vitest/coverage-v8": "^4.0.18",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "prettier": "^3.8.1",
    "tsx": "^4.21.0",
    "typescript": "5.9.3",
    "vite-tsconfig-paths": "^6.1.0",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "overrides": {
    "glob": "^10.4.0",
    "rimraf": "^5.0.0",
    "tar": "^7.6.0",
    "inflight": "npm:lru-cache@^10.0.0",
    "lodash": "^4.17.22",
    "multer": "^2.0.2",
    "esbuild": ">=0.25.0",
    "@anthropic-ai/sdk": "^0.39.0",
    "openai": "^4.104.0",
    "typescript": "5.6.3",
    "axios": "^1.13.4",
    "ws": "^8.19.0",
    "express": "^4.22.1",
    "jsonwebtoken": "^9.0.3",
    "fast-xml-parser": ">=5.3.4",
    "lodash-es": ">=4.17.23"
  },
  "pnpm": {
    "overrides": {
      "@esbuild-kit/core-utils>esbuild": ">=0.25.0",
      "esbuild": ">=0.25.0",
      "multer": "^2.0.2",
      "@anthropic-ai/sdk": "^0.39.0",
      "openai": "^4.104.0",
      "typescript": "5.6.3",
      "fast-xml-parser": ">=5.3.4",
      "lodash-es": ">=4.17.23"
    }
  }
}
